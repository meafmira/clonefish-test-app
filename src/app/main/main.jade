      .well
        div(ng-bind="wizard.cardInfo.cardNumber")
        div(ng-bind="wizard.cardInfo.cardHolder")
        div(ng-bind="wizard.cardInfo.cvv")
        div
          span(ng-bind="wizard.cardInfo.expDate.month")
          | /
          span(ng-bind="wizard.cardInfo.expDate.year")

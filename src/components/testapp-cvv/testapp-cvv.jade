div
  input.form-control(readonly, ng-model="cvv")
  .well
    div
      .btn-group.btn-group-justified
        a.btn.btn-default(ng-bind="digits[0]", ng-click="addDigit(digits[0])")
        a.btn.btn-default(ng-bind="digits[1]", ng-click="addDigit(digits[1])")
        a.btn.btn-default(ng-bind="digits[2]", ng-click="addDigit(digits[2])")
    div
      .btn-group.btn-group-justified
        a.btn.btn-default(ng-bind="digits[3]", ng-click="addDigit(digits[3])")
        a.btn.btn-default(ng-bind="digits[4]", ng-click="addDigit(digits[4])")
        a.btn.btn-default(ng-bind="digits[5]", ng-click="addDigit(digits[5])")
    div
      .btn-group.btn-group-justified
        a.btn.btn-default(ng-bind="digits[6]", ng-click="addDigit(digits[6])")
        a.btn.btn-default(ng-bind="digits[7]", ng-click="addDigit(digits[7])")
        a.btn.btn-default(ng-bind="digits[8]", ng-click="addDigit(digits[8])")
    div
      .btn-group.btn-group-justified
        a.btn.btn-default(ng-click="clear()")
          i.glyphicon.glyphicon-trash
        a.btn.btn-default(ng-bind="digits[9]", ng-click="addDigit(digits[9])")
        a.btn.btn-default(ng-click="removeDigit()")
          i.glyphicon.glyphicon-remove
